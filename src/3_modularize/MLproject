name: 3_modularize
conda_env: conda.yml

entry_points:
  main:
    parameters:
      steps:
        description: Comma separated names of steps to run or all
        type: string
        default: all
      config:
        description: Path to config file with settings for steps
        type: string
        default: "config.yaml"
      project_name:
        description: W&B project name
        type: string
        default: mnist
      group_name:
        description: W&B group name
        type: string
        default: development
    command: "python main.py {steps} {project_name} {group_name}"
